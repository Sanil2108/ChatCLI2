<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:orientation="vertical"
    tools:context="com.sanilk.chatcli2.themes.dos.DOSThemeActivity">

    <EditText
        android:id="@+id/dos_user"
        android:text="sanil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:text="sanil2"
        android:id="@+id/dos_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/dos_message_edit"
        android:text="message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/dos_send"
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--<Button-->
        <!--android:text="Receive"-->
        <!--android:id="@+id/receiverButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <TextView
        android:id="@+id/dos_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
