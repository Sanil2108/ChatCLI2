<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/dos_main_main_container"
    android:layout_height="match_parent"
    android:background="@color/DOSBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/dos_scroll_view"
            android:layout_marginBottom="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/message_container"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme"
            android:orientation="vertical"
            tools:context="com.sanilk.chatcli2.themes.dos.DOSThemeActivity">


            <LinearLayout
                style="@style/AppTheme"
                android:id="@+id/main_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:fontFamily="monospace"
                    android:textColor="@color/DOSText"
                    android:textSize="@dimen/dos_font_size"
                    android:text="@string/DOSOpeningMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/new_container">


            </LinearLayout>

        </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dos_encrypt_button"
                android:src="@drawable/unlocked"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:padding="1dp"
                android:background="@color/DOSborder"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <EditText
                    android:paddingLeft="5dp"
                    android:background="@color/DOSBackground"
                    android:id="@+id/dos_cli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:inputType="textEmailAddress"
                    android:text="\@signup"
                    android:textColor="@color/DOSText"
                    android:textSize="@dimen/dos_font_size"
                    android:textStyle="normal" />

            </RelativeLayout>

            <ImageView
                android:scaleType="centerInside"
                android:src="@drawable/send1"
                android:id="@+id/temp_exec_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
